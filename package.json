{
  "name": "angular-monorepo",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "start:app-one": "ng serve --project=app-one --port=4000",
    "start:app-two": "ng serve --project=app-two --port=4100",
    "build:app-one": "ng build --project app-one --base-href /one/",
    "build:app-two": "ng build --project app-two --base-href /two/",
    "docker-build:app-one": "docker build . -f projects/app-one/Dockerfile -t app-one",
    "docker-build:app-two": "docker build . -f projects/app-two/Dockerfile -t app-two",
    "docker-tag:app-one": "docker image tag app-one:latest anthonykonschuh/app-one:latest",
    "docker-tag:app-two": "docker image tag app-two:latest anthonykonschuh/app-two:latest",
    "docker-push:app-one": "npm run docker-tag:app-one && docker image push anthonykonschuh/app-one:latest",
    "docker-push:app-two": "npm run docker-tag:app-two && docker image push anthonykonschuh/app-two:latest",
    "helm-upgrade:app-one": "helm upgrade --install app-one -f ./helm/values.yaml -f ./projects/app-one/values.yaml ./helm",
    "helm-upgrade:app-two": "helm upgrade --install app-two -f ./helm/values.yaml -f ./projects/app-two/values.yaml ./helm"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "~13.3.0",
    "@angular/common": "~13.3.0",
    "@angular/compiler": "~13.3.0",
    "@angular/core": "~13.3.0",
    "@angular/forms": "~13.3.0",
    "@angular/platform-browser": "~13.3.0",
    "@angular/platform-browser-dynamic": "~13.3.0",
    "@angular/router": "~13.3.0",
    "rxjs": "~7.5.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.11.4"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~13.3.10",
    "@angular/cli": "~13.3.4",
    "@angular/compiler-cli": "~13.3.0",
    "@types/jasmine": "~3.10.0",
    "@types/node": "^12.11.1",
    "jasmine-core": "~4.0.0",
    "karma": "~6.3.0",
    "karma-chrome-launcher": "~3.1.0",
    "karma-coverage": "~2.1.0",
    "karma-jasmine": "~4.0.0",
    "karma-jasmine-html-reporter": "~1.7.0",
    "ng-packagr": "^13.0.0",
    "typescript": "~4.6.2"
  }
}
